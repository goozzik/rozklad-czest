%div{'data-role' => 'content'}
  %ul{'data-role' => 'listview'}
    %li{'data-role' => 'list-divider'}
      = 'Przystanek: ' + @schedules.first.station.name
      %br
      = 'Kierunek: ' + @schedules.first.line.direction
    - @schedules.each do |schedule|
      %li
        = link_to "#{schedule.line.number} o #{schedule.arrival_at.strftime("%H:%M")}", 
         search_schedule_map_path(:station_from => @station_from.id,
                                  :station_to => @station_to.id,
                                  :map => 0)
