<!DOCTYPE html>
%html
  %head
    = stylesheet_link_tag 'jquery.mobile.css',
                          'jquery.ui.css'
    = javascript_include_tag :defaults,
                             'jquery.ui.js',
                             'jquery.mobile.js',
                             'autocomplete-rails.js',
                             'http://maps.google.com/maps/api/js?sensor=true'
    = csrf_meta_tag
  %body
    %div{'data-role' => 'page', :style => current_action?('map') ? 'width: 100%; height: 100%' : nil , :class => current_action?('map') ? 'page-map' : nil}
      %div{'data-role' => 'header'}
        %div{"data-role" => "navbar"}
          %ul
            %li= link_to 'Index', root_path, :rel => 'external'
            %li= link_to 'Szukaj', search_schedule_new_search_path, :rel => 'external'
            %li= link_to 'Ulubione', favourites_path, :rel => 'external'
            %li= link_to 'Mapa', pages_map_path, :rel => 'external'
      = yield
