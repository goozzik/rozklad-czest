= form_tag search_schedule_search_path, :method => :get, :class => 'form' do
  %table
    %tr
      %td{:style => 'width: 200px;'}= label_tag :from_station, 'Z przystanku' 
      %td{:style => 'width: 180px;'}= check_box_tag :from_station, 'true', false, :onchange => "$('#station_from_container').toggle('slow');"

    %tr#station_from_container{:style => 'display:none;'}
      %td= label_tag :station_from, 'Przystanek odjazdowy' 
      %td= text_field_tag :station_from, '', :autocomplete => search_schedule_autocomplete_station_name_path 

    %tr
      %td= label_tag :from_my_location, 'Z mojego położenia' 
      %td= check_box_tag :from_my_location, 'true', false, :onchange => "$('#within_container').toggle('slow');"

    %tr#within_container{:style => 'display:none;'}
      %td= label_tag :within, 'W promieniu (w kilometrach)' 
      %td= text_field_tag :within, '1'

    %tr
      %td= label_tag :station_to, 'Przystanek docelowy' 
      %td= text_field_tag :station_to, '', :autocomplete => search_schedule_autocomplete_station_name_path

  = submit_tag 'Szukaj', 'data-icon' => 'forward', 'data-role' => 'button'
