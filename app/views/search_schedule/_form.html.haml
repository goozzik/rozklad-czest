#form.grid_6.alpha
  = form_tag search_schedule_search_path, :method => :get do
    %h2 Szukaj połączenia
    .grid_6.alpha
      .grid_3.alpha= label_tag :from_station, 'Z przystanku?' 
      .grid_3.omega= check_box_tag :from_station, 'true', false, :onchange => "$('#station_from_container').toggle('slow');"

    .grid_6.alpha#station_from_container{:style => 'display:none;'}
      .grid_3.alpha= label_tag :station_from, 'Przystanek odjazdowy' 
      .grid_3.omega= text_field_tag :station_from, '', :autocomplete => search_schedule_autocomplete_station_name_path 

    .grid_6.alpha
      .grid_3.alpha= label_tag :from_my_location, 'Z mojego położenia?' 
      .grid_3.omega= check_box_tag :from_my_location, 'true', false, :onchange => "$('#within_container').toggle('slow');"

    .grid_6.alpha#within_container{:style => 'display:none;'}
      .grid_3.alpha= label_tag :within, 'W promieniu (w kilometrach)' 
      .grid_3.omega= text_field_tag :within, '1'

    .grid_6.alpha
      .grid_3.alpha= label_tag :station_to, 'Przystanek docelowy' 
      .grid_3.omega= text_field_tag :station_to, '', :autocomplete => search_schedule_autocomplete_station_name_path

    .grid_6.alpha
      .grid_3.alpha= submit_tag 'Szukaj', 'data-icon' => 'forward', 'data-role' => 'button'
