.prefix_3
  .grid_6.box
    %h2 Szukaj połączenia
    = form_tag search_schedule_search_path, :method => :get do

      = label_tag :from_station, 'Z przystanku', :class => 'grid_2 alpha prefix_1'
      = check_box_tag :from_station, 'true', false, :onchange => "$('#station_from_container').toggle('slow');", :class => 'grid_2 omega'

      .clear

      #station_from_container{:style => 'display:none;'}
        = label_tag :station_from, 'Przystanek odjazdowy', :class => 'grid_2 alpha prefix_1'
        = autocomplete_field_tag :station_from, '', search_schedule_autocomplete_station_name_path, :class => 'grid_2 omega'

      .clear.vertical_spacer

      = label_tag :from_my_location, 'Z mojego położenia', :class => 'grid_2 alpha prefix_1'
      = check_box_tag :from_my_location, 'true', false, :onchange => "$('#within_container').toggle('slow');", :class => 'grid_2 omega'

      .clear
      #within_container{:style => 'display:none;'}
        = label_tag :within, 'W promieniu (w metrach)', :class => 'grid_2 alpha prefix_1'
        - if session[:mobile] 
          = range_field_tag :within, 500, :min => 100, :max => 2000, :step => 100
        - else 
          = text_field_tag :within, '500', :class => 'grid_2 omega'

      .clear.vertical_spacer

      = label_tag :station_to, 'Przystanek docelowy', :class => 'grid_2 alpha prefix_1'
      = autocomplete_field_tag :station_to, '', search_schedule_autocomplete_station_name_path, :class => 'grid_2 omega'

      .clear.vertical_spacer

      .grid_2.alpha.prefix_4
        = submit_tag 'Szukaj', 'data-icon' => 'forward', 'data-role' => 'button'
