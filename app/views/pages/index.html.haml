.grid_4.prefix_4
  %h2#loading{:style => 'display: none;'} Loading...
.clear

.prefix_1
  .grid_4.box
    - if current_user
      %h2= current_user.user_name
      %ul
        %li= "Zalogowany jako " + current_user.user_name 
        %li= link_to "Wyloguj", log_out_path
    - else
      = render :template => 'sessions/new'

- unless @favourites.empty?
  .grid_4.box
    %h2 Ulubione
    %ul{'data-role' => 'listview'}
      - @favourites.each do |favourite|
        %li
          = link_to favourite.name,
            search_schedule_search_path(:station_from => favourite.station_from,
                                        :station_to => favourite.station_to,
                                        :from_station => 'true')

.clear

.grid_5.prefix_1 
  %h2 Łatwo i szybko
  %h3 rozkład.czest.pl w łatwy sposób pomoże ci odnaleźć połączenie między przystankami MPK w Częstochowie.

.grid_5.suffix_1
  %h2 Udostępnij położenie
  %h3
    Jeżeli chcesz korzystać z funkcji mapy, musisz najpierw udostępnic swoje położenie.
  .grid_2.alpha.prefix_3
    = button_to_function 'Odśwież położenie',
                       'getLocation();',
                       'data-icon' => 'refresh',
                       'data-role' => 'button'

- unless current_user
  = render :template => 'users/new'

- if session[:lat].nil?
  :javascript
    $(
      navigator.geolocation.getCurrentPosition(
        function(position){
          var lat = position.coords.latitude;
          var lng = position.coords.longitude;
          $.ajax({
            type: 'POST',
            url: '/pages/get_location',
            data: 'lat=' + lat + '&lng=' + lng
          });
        }
      )
    )
