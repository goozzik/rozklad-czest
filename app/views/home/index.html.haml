  %body
    %div#Home
      %div.toolbar
        %h1 Rozkład
      %ul.rounded
        %li= link_to "Wyszukaj połączenie", "#Finder"
        %li= link_to "Ulubione", "#Favourites"
      %h2 Ogłoszenie
      %ul.rounded
        %li Przykładowy tekst. rozkład.czest.pl

    %form#Finder{:class => 'form', :method => 'post', :action => "home/schedule_find"}
      %div.toolbar
        %li= link_to "Wstecz", "#home", :class => 'back'
      %ul.rounded
        %li
          %input{:id => "find_from", :name => 'find_from', :value => "Z"}
        %li
          %input{:id => "find_to", :name => 'find_to', :value => "Do"}
      = link_to "Wyszukaj", "#", :class => "submit whiteButton"      
      
    %div#Favourites
      %div.toolbar
        %li= link_to "Wstecz", "#home", :class => 'back'
        %h1 Ulubione
        %li= link_to "Dodaj", "#addToFavourites", :class => "button slideup"
      %ul.rounded
        
