%div#home
  %div.toolbar
  %ul.rounded
    %li= link_to "Wyszukaj połączenie", "#find_schedule", :class => "slide up"
    %li= link_to "Ulubione", "#favourites"
  %h2 Ogłoszenie
  %ul.rounded
    %li Przykładowy tekst. rozkład.czest.pl

%div#find_schedule{:action => 'find_schedule', :method => "POST"}
  %div.toolbar
    %li= link_to "Cofnij", "#home", :class => "button cancel"
    %h1 Wyszukaj
  %form{:method => "POST"}
    %ul
      %li
        = text_field_tag "find_from", "Z"
      %li
        = text_field_tag "find_to", "Do"
      %li
        %input{:type => "submit", :class => "submit", :name => "search", :value => "Wyszukaj"}
  
