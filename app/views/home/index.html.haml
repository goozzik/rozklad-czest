%html
  %head
    / jquery
    %script{:src => "javascripts/jquery-1.4.2.js"}
    %script{:src => "javascripts/jquery-ui.js"}
    = stylesheet_link_tag 'jquery-ui/jquery-ui.css'
    / jqtouch
    %script{:src => "stylesheets/jqtouch/jqtouch.js"}
    %script{:src => "javascripts/home.js"}
    = stylesheet_link_tag 'jqtouch/jqtouch.css'
    = stylesheet_link_tag 'themes/apple/theme.css'
    / jquery counter
    %script{:src => "javascripts/jquery.countdown.js"}
    %script{:src => "javascripts/counter.js"}
    / %script{:src => "javascripts/refresh_counter.js"}
    / jquery autocomplete
    %script{:src => "javascripts/autocomplete_data.js"}
